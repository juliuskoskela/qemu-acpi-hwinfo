root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[*.{nix}]
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{json,yaml,yml}]
indent_size = 2

[*.py]
indent_size = 4

[*.{c,h,cpp,hpp}]
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2